<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.ListaDeTarefas" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryy</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccentt</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDarkk</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Theme.ListaDeTarefas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <!---->
    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title" tools:ignore="ResourceCycle">
        <item name="android:textColor">@color/white</item> <!-- Defina a cor do texto como branco -->
    </style>




<!--    -->





    <style name="Theme.ListaDeTarefas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ListaDeTarefas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>